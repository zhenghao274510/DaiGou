swiper-item {
  overflow-y: scroll;
}
.swiper-box {
  height: calc(100% - 40px);
}
page,
.content {
  height: 100%;
}
page .navbar,
  .content .navbar {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    height: 40px;
    padding: 0 5px;
    background: #fff;
    box-shadow: 0 1px 5px rgba(0, 0, 0, 0.06);
    position: relative;
    z-index: 10;
}
page .navbar .nav-item,
    .content .navbar .nav-item {
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      line-height: 40px;
      text-align: center;
      font-size: 15px;
      position: relative;
}
page .navbar .nav-item.current,
      .content .navbar .nav-item.current {
        color: #00736B;
}
page .navbar .nav-item.current:after,
        .content .navbar .nav-item.current:after {
          content: '';
          position: absolute;
          left: 50%;
          bottom: 0;
          -webkit-transform: translateX(-50%);
                  transform: translateX(-50%);
          width: 44px;
          height: 0;
          border-bottom: 2px solid #00736B;
}
page .list-scroll-content .com-list,
  .content .list-scroll-content .com-list {
    width: 95%;
    height: 60px;
    margin: 10px auto;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    border-bottom: 1px solid #ccc;
}
page .list-scroll-content .com-list .com-list-left,
    .content .list-scroll-content .com-list .com-list-left {
      width: 30%;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      color: #00736B;
      font-weight: bold;
      font-size: 17px;
}
page .list-scroll-content .com-list .com-list-right,
    .content .list-scroll-content .com-list .com-list-right {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-direction: column;
              flex-direction: column;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
              justify-content: center;
      -webkit-box-align: start;
      -webkit-align-items: flex-start;
              align-items: flex-start;
}
page .list-scroll-content .com-list .com-list-right .com-one,
      .content .list-scroll-content .com-list .com-list-right .com-one {
        font-weight: bold;
}
page .list-scroll-content .com-list .com-list-right .com-two,
      .content .list-scroll-content .com-list .com-list-right .com-two {
        color: #999999;
        font-size: 12px;
}

